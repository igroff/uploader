#! /usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source $DIR/set-version.sh
source .pyenv/bin/activate
if [ ! -n "$PORT" ]; then
    PORT=5000
fi

case $1 in
    start)
		gunicorn --bind 0.0.0.0:$PORT pyserver.core:app
    ;;
    stop)
        $DIR/stop-server
    ;;
    debug)
		pyserver/core.py start
    ;;
    test)
		pyserver/core.py test
    ;;
    *)
        echo "usage: server [debug|start|stop|test]";;
esac
