#! /usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
export XHOSTNAME=`hostname`
source $DIR/set-version.sh
source .pyenv/bin/activate
if [ ! -n "$PORT" ]; then
    PORT=5000
fi

case $1 in
    start)
		exec gunicorn --bind 0.0.0.0:$PORT pyserver.core:app
    ;;
    stop)
        $DIR/stop-server
    ;;
    debug)
		pyserver/core.py start --port $PORT
    ;;
    test)
		pyserver/core.py test
    ;;
    config)
        pyserver/core.py config
    ;;
    *)
        echo "usage: server [debug|start|stop|test|config]";;
esac
